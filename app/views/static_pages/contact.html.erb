<div class="d-flex flex-row">
<section class="col-1">
</section>
<section class="my-2 col-5 row-1">
  <h1>Contact us</h1>
  <form>
    <div class="form-group">
      <label for="contact_fname">First name: </label>
      <input id="contact_fname" name="contact_fname" class="form-control" placeholder="Please enter your first name" />
    </div>
    <br/>
    <div class="form-group">
      <label for="contact_lname">Last name: </label>
      <input id="contact_lname" name="contact_lname" class="form-control" placeholder="Please enter your family name"/>
    </div>
    <br/>
    <div class="form-group">
      <label for="contact_email">E-mail: </label>
      <input id="contact_email" name="contact_email" class="form-control" placeholder="Please enter your e-mail address"/>
      <small class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <br/>
    <div class="form-group">
      <label for="contact_object">Object: </label>
      <input id="contact_object" name="contact_object" class="form-control" placeholder="Please enter the reason you want to reach out to us"/>
    </div>
    <br/>
    <div class="form-group">
      <label for="contact_text">Question / Suggestion: </label>
      <textarea id="contact_text" name="contact_text" class="form-control" placeholder="Please type in your question(s) and/or suggestion(s)"></textarea>
    </div>
    <br/>
    <div class="form-group">
      <input type="submit" class="btn btn-primary">
      <input type="reset" class="btn btn-secondary">
    </div>
  </form>
</section>
<section class="col-1">
</section>
<section class="col-5">
  <%=image_tag("contact.jpg", class: "col-12 row-1")%>
</section>
</div>
